      = link_to "Add Facebook", user_omniauth_authorize_path({provider: "facebook"})
      %br

.box(style="background: white;")
hello world

- if user_signed_in?
  = current_user.email
  = current_user.services.map(&:provider)
  = link_to "Signout", destroy_user_session_path, method: "delete"
  %br
  = link_to "Add twitter", user_omniauth_authorize_path({provider: "twitter"}) unless current_user.twitter
  %br
  = link_to "Add Facebook", user_omniauth_authorize_path({provider: "facebook"}) unless current_user.facebook
  %br
  = link_to "Add Wordpress", user_omniauth_authorize_path({provider: "wordpress"})
  %br
  - current_user.services.each do |service|
    = service.provider
    = service.uid
    - if service.provider == "wordpress"
      = link_to service.uid, posts_path(service.blog_id)
    %br

- else
  = link_to "Signin", new_user_session_path
 
