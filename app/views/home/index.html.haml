      %hr(style="border:none;border-bottom: 1px solid #CCC")
  .row(style="text-align:center;")
    .span8
      %ul.span5
        %li(style="list-style:none")
          %h4.span3(style="font-weight:500")  Wordpress
          = link_to "+", user_omniauth_authorize_path({provider: "wordpress"}), class: "span1 pull-right", style: "font-size: 15px;color:#333"
  .row
    .span12(style="text-align:center;margin-top:10px;")
      %span(style="font-weight:600;font-size:20px;") Add Your Social Networks
